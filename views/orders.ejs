<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner"
            class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Sidebar---------------------------------->
        <%- include ('partials/admin-sidebar.ejs') %>



            <!-- Content Start -->
            <div class="content">


                <!-- Navbar  ------------------------------->
                <%- include ('partials/admin-navbar.ejs') %>


                    <div class="container-fluid pt-4 px-4">
                        <div class="col-sm-12 col-xl-12">
                            <div class="bg-light rounded h-100 p-4">
                                <div class="col-sm-12 col-xl-12">
                                    <div class="bg-light rounded h-100 p-4">
                                        <h6 class="mb-4">Recent Orders</h6>
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Ordered At</th>
                                                    <th scope="col">User</th>
                                                    <th scope="col">Order ID</th>
                                                    <th scope="col">Payement</th>
                                                    <th scope="col">Status</th>
                                                    <th scope="col">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if(orders) { %>
                                                    <% for(var i=0 ; i<orders.length ; i++) { %>

                                                        <tr>
                                                            <td scope="row">
                                                                <%= orders[i].createdAt.toLocaleString() %>
                                                            </td>
                                                            <td>
                                                                <%= orders[i].user.uname %>
                                                            </td>
                                                            <td>
                                                                <%= orders[i].orderid %>
                                                            </td>
                                                            <td>
                                                                <%= orders[i].paymentmethod %>
                                                            </td>
                                                            <td>
                                                                <%= orders[i].status %>
                                                            </td>
                                                            <td>
                                                                <button class="dropbtn"><a style="color: white;" href="/admin/editorder?orderid=<%= orders[i]._id %>">Details</a></button>
                                                                <!-- <div class="dropdown">
                                                                    <button class="dropbtn">Options</button>
                                                                    <div class="dropdown-content">
                                                                      <a href="/admin/editorder?orderid=<%= orders[i]._id %>">Details</a>
                                                                      <a onclick="deleteorder('<%= orders[i]._id %>')" style="cursor: pointer;">Delete</a>
                                                                    </div>
                                                                </div> -->
                                                            </td>
                                                        </tr>

                                                    <% } %>
                                                <% } else { %>
                                                    <tr><td>There are no orders...!!</td></tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- 000000000000000000000000 -->


                    <!-- Widgets Start -->



                    <!-- Footer  ----------------------------------------->
                    <%- include ('partials/admin-footer.ejs') %>



            </div>
            <!-- Content End -->


            <!-- Back to Top -->
            <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <style>
        .dropbtn {
          background-color: #717272;
          color: white;
          font-size: 16px;
          border: none;
        }
        
        .dropdown {
          position: relative;
          display: inline-block;
        }
        
        .dropdown-content {
          display: none;
          position: absolute;
          background-color: #f1f1f1;
          /* min-width: 120px; */
          box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
          z-index: 1;
        }
        
        .dropdown-content a {
          color: rgb(32, 32, 32);
          padding: 6px 16px;
          text-decoration: none;
          display: block;
        }
        
        .dropdown-content a:hover {background-color: #ddd;}
        
        .dropdown:hover .dropdown-content {display: block;}
        
        .dropdown:hover .dropbtn {background-color: #292b29;}
    </style>

