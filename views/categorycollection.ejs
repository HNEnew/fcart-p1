	<link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">

	<!-- Theme style  -->
	<link rel="stylesheet" href="css/style.css">

	<!-- fontawsome link -->
	<script src="https://kit.fontawesome.com/c8553dfad7.js" crossorigin="anonymous"></script>

</head>

<body>

	<div class="colorlib-loader"></div>

	<div id="page">


		<!-- navbar starts -->

		<%- include ('partials/user-header.ejs' , { categories }) %>

			<!-- navbar ends -->
			<div class="colorlib-product" id="searchresultdiv">
				<div class="container">
					<div class="row row-pb-md" id="searchedproducts"></div>
				</div>
			</div>

			<div id="allproducts">
			<div class="breadcrumbs">
				<div class="container">
					<div class="row">
						<div class="col">
							<p class="bread"><span><a href="/">Home</a></span> / <span>
									<%= categoryname %>
								</span></p>
						</div>
					</div>
				</div>
			</div>

			<div class="breadcrumbs-two">
				<div class="container">
					<div class="row">
						<div class="col">
							<div class="breadcrumbs-img" style="background-image: url(images/cover-img-1.jpg);">
								<h2>
									<%= categoryname %>'s
								</h2>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="colorlib-product">
				<div class="container">
					<div class="row">
						<div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
							<h2>View All Products</h2>
						</div>
					</div>
					<div class="row row-pb-md">


						<% for(var i=0 ; i<categorycollection.length ; i++) { %>

							<div class="col-md-3 col-lg-3 mb-4 text-center">
								<div class="product-entry border"
									onclick="productview('<%= categorycollection[i]._id %>')">
									<a href="/productdetails?id=<%= categorycollection[i]._id %>" class="prod-img">
										<img src="/productimages/<%= categorycollection[i].image[0] %>"
											class="img-fluid" alt="Free html5 bootstrap 4 template">
									</a>
									<div class="desc">
										<h2>
											<a href="/productdetails?id=<%= categorycollection[i]._id %>">
												<%= categorycollection[i].name %>
											</a>
										</h2>
										<span class="price">$<%= categorycollection[i].cost %></span>
										<% if(userdata) { %>
											<i onclick="event.stopPropagation(); addtowishlist('<%= categorycollection[i]._id %>')"
												class="fa-regular fa-heart btn btn-primary"></i>
											<!-- <i class="fa-solid fa-heart"></i> -->
											<i onclick="event.stopPropagation(); addtocart('<%= categorycollection[i]._id %>','<%= userdata._id %>')"
												class="fa-solid fa-cart-plus btn btn-primary"></i>
										<% } else { %>
											<i onclick="event.stopPropagation(); login()"
													class="fa-regular fa-heart btn btn-primary"></i>
											<!-- <i class="fa-solid fa-heart"></i> -->
											<i onclick="event.stopPropagation(); login()"
													class="fa-solid fa-cart-plus btn btn-primary"></i>
										<% } %>
									</div>
								</div>
							</div>

							<% } %>


					</div>

					<div class="row">
						<div class="col-md-12 text-center">
							<div class="block-27">
								<ul>
									<% if(page!=1) { %>
									<li><a href="/categorycollection?id=<%= categoryid %>&page=<%= page-1 %>"><i class="ion-ios-arrow-back"></i></a></li>
									<% } %>
									<% for(var i=1 ; i<=totalpages ; i++) { %>
										<% if(i==page) { %>
									<li class="active"><span><%= i %></span></li>
									<% } else { %>
									<li><a href="/categorycollection?id=<%= categoryid %>&page=<%= i %>"><%= i %></a></li>
									<% } } %>
									<% if(page!=totalpages) { %>
									<li><a href="/categorycollection?id=<%= categoryid %>&page=<%= page+1 %>"><i class="ion-ios-arrow-forward"></i></a></li>
									<% } %>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
			</div>

			<div class="colorlib-partner">
				<div class="container">
					<div class="row">
						<div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
							<h2>Trusted Partners</h2>
						</div>
					</div>
					<div class="row">
						<div class="col partner-col text-center">
							<img src="images/brand-1.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
						</div>
						<div class="col partner-col text-center">
							<img src="images/brand-2.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
						</div>
						<div class="col partner-col text-center">
							<img src="images/brand-3.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
						</div>
						<div class="col partner-col text-center">
							<img src="images/brand-4.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
						</div>
						<div class="col partner-col text-center">
							<img src="images/brand-5.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
						</div>
					</div>
				</div>
			</div>

			<!-- -------------------------------------- -->

			<!-- footer starts -->

			<%- include ('partials/user-footer.ejs') %>

				<!-- foooter ends -->


	</div>

	<div class="gototop js-top">
		<a href="#" class="js-gotop"><i class="ion-ios-arrow-up"></i></a>
	</div>

	<style>
		#searchresultdiv{
			display: none;
		}
		#allproducts {
			display: block;
		}
	</style>
	<!-- script for searchbutton -->
	<script>
		const searchinput = document.getElementById('searchinput')
		searchinput.addEventListener('input', async (event) => {
			const text = event.target.value
			
			try {
				const res = await fetch('/search?text=' + text,
					{
						method: 'GET',
						headers: { 'Content-Type': 'application/json' }
					})
				const searchresult = await res.json()
				
				let searchedproducts = document.getElementById('searchedproducts')
				let allproducts = document.getElementById('allproducts')
				const searchinput = document.getElementById('searchinput')
				const searchresultdiv = document.getElementById('searchresultdiv')
				if (searchinput.value == '') {
					
					searchresultdiv.style.display = 'none'
					allproducts.style.display = 'block'
				} else if (searchresult.result.length == 0) {
					
					allproducts.style.display = 'none'
					searchresultdiv.style.display = 'flex'
					searchedproducts.style.justifyContent = 'center'
					searchedproducts.innerHTML = `<img style="align-items: center; justify-content: center;" src="/otherimages/noresult.png" alt="">`
				} else {
					
					allproducts.style.display = 'none'
					searchresultdiv.style.display = 'block'
					searchedproducts.innerHTML = ''
					for (var i=0 ; i<searchresult.result.length ; i++) { 
						searchedproducts.innerHTML += `
						<div class="col-lg-3 mb-4 text-center">
							<div class="product-entry border" onclick="productview(${searchresult.result[i]._id})">
								<a href="/productdetails?id=${searchresult.result[i]._id}" class="prod-img">
									<img src="/productimages/${searchresult.result[i].image[0]}" class="img-fluid" alt="Free html5 bootstrap 4 template">
									<div class="desc">
										<h2><a href="/productdetails?id=${searchresult.result[i]._id}">
											${searchresult.result[i].name}
											</a>
										</h2>
										<span class="price">
											$${searchresult.result[i].cost}
										</span>
									</div>
								</a>
							</div>
						</div>`
					}
				}
			} catch (Error) {
				console.log(Error);
			}
		})
	</script>

	<!-- script for productdetails onclick -->
	<script>
		async function productview(id) {
			location.assign('/productdetails?id=' + id)
		}
		function login() {
			location.assign('/login')
		}
		// addtowishlist function-----
		async function addtowishlist(productid) {
			try {
				const res = await fetch('/addtowishlist',
					{
						method: 'POST',
						body: JSON.stringify({ productid }),
						headers: { 'Content-Type': 'application/json' }
					})
				const message = await res.json()
				
				if (message.succes) {
					window.alert(message.succes)
				} else {
					window.alert(message.failure)
				}
			} catch (error) {
				console.log(error)
			}
		}
		// addtocart function-----
		async function addtocart(productid, userid) {
			const quantity = 1
			const res = await fetch('/addtocart',
				{
					method: 'POST',
					body: JSON.stringify({ productid, userid, quantity }),
					headers: { 'Content-Type': 'application/json' }
				})
			const message = await res.json()
			
			if (message.succes) {
				window.alert(message.succes)
			} else {
				window.alert(message.failure)
			}
		}
	</script>

