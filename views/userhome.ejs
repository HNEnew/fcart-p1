												<div class="desc">
													<h2><a href="/productdetails?id=<%= products[i]._id %>">
															<%= products[i].name %>
														</a>
													</h2>
													<span class="price">
														₹<%= products[i].cost %>
													</span>
													<% if(userdata) { %>
														<i onclick="event.stopPropagation(); addtowishlist('<%= products[i]._id %>')"
															class="fa-regular fa-heart btn btn-primary"></i>
														<i onclick="event.stopPropagation(); addtocart('<%= products[i]._id %>','<%= userdata._id %>')"
															class="fa-solid fa-cart-plus btn btn-primary"></i>
														<% } else { %>
															<i onclick="event.stopPropagation(); login()"
																class="fa-regular fa-heart btn btn-primary"></i>
															<i onclick="event.stopPropagation(); login()"
																class="fa-solid fa-cart-plus btn btn-primary"></i>
															<% } %>
												</div>
											</a>

										</div>
									</div>

									<% } } else { %>

										<% for(var i=0 ; i<8 ; i++) { %>

											<div class="col-lg-3 mb-4 text-center">
												<div class="product-entry border"
													onclick="productview('<%= products[i]._id %>')">
													<a href="/productdetails?id=<%= products[i]._id %>"
														class="prod-img">
														<img src="/productimages/<%= products[i].image[0] %>"
															class="img-fluid" alt="Free html5 bootstrap 4 template">
														<div class="desc">
															<h2><a href="/productdetails?id=<%= products[i]._id %>">
																	<%= products[i].name %>
																</a>
															</h2>
															<span class="price">
																₹<%= products[i].cost %>
															</span>
															<% if(userdata) { %>
																<i onclick="event.stopPropagation(); addtowishlist('<%= products[i]._id %>')"
																	class="fa-regular fa-heart btn btn-primary"></i>
																<i onclick="event.stopPropagation(); addtocart('<%= products[i]._id %>','<%= userdata._id %>')"
																	class="fa-solid fa-cart-plus btn btn-primary"></i>
																<% } else { %>
																	<i onclick="event.stopPropagation(); login()"
																		class="fa-regular fa-heart btn btn-primary"></i>
																	<i onclick="event.stopPropagation(); login()"
																		class="fa-solid fa-cart-plus btn btn-primary"></i>
																	<% } %>
														</div>
													</a>

												</div>
											</div>

											<% } } %>



						</div>

						<div class="row">
							<div class="col-md-12 text-center">
								<!-- <p><a href="#" class="btn btn-primary btn-lg">Shop All Products</a></p> -->
							</div>
						</div>
					</div>
