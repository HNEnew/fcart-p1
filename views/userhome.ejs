	<!-- scripts on products onclick -->
	<script>
		function productview(id) {
			location.assign('/productdetails?id=' + id)
		}
		function login() {
			location.assign('/login')
		}
		// addtowishlist function-----
		async function addtowishlist(productid) {
			try {
				const res = await fetch('/addtowishlist',
					{
						method: 'POST',
						body: JSON.stringify({ productid }),
						headers: { 'Content-Type': 'application/json' }
					})
				const message = await res.json()
				console.log(message)
				if (message.succes) {
					window.alert(message.succes)
				} else {
					window.alert(message.failure)
				}
			} catch (error) {
				console.log(error)
			}
		}
		// addtocart function-----
		async function addtocart(productid, userid) {
			const quantity = 1
			const res = await fetch('/addtocart',
				{
					method: 'POST',
					body: JSON.stringify({ productid, userid, quantity }),
					headers: { 'Content-Type': 'application/json' }
				})
			const message = await res.json()
			console.log(message)
			if (message.succes) {
				window.alert(message.succes)
			} else {
				window.alert(message.failure)
			}
		}
	</script>

