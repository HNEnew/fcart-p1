			</div>
			
			<!-- script for searchbutton -->
			<script>
				const searchinput = document.getElementById('searchinput')
				searchinput.addEventListener('input', async (event) => {
					const text = event.target.value
					console.log(text)
					try {
						const res = await fetch('/search?text=' + text,
							{
								method: 'GET',
								headers: { 'Content-Type': 'application/json' }
							})
						const searchresult = await res.json()
						console.log(searchresult)
						let searchedproducts = document.getElementById('searchedproducts')
						let allproducts = document.getElementById('allproducts')
						const searchinput = document.getElementById('searchinput')
						const searchresultdiv = document.getElementById('searchresultdiv')
						if (searchinput.value == '') {
							console.log('first condition...')
							searchresultdiv.style.display = 'none'
							allproducts.style.display = 'block'
						} else if (searchresult.result.length == 0) {
							console.log('second condition...')
							allproducts.style.display = 'none'
							searchresultdiv.style.display = 'flex'
							searchedproducts.style.justifyContent = 'center'
							searchedproducts.innerHTML = `<img style="align-items: center; justify-content: center;" src="/otherimages/noresult.png" alt="">`
						} else {
							console.log('third condition...')
							allproducts.style.display = 'none'
							searchresultdiv.style.display = 'block'
							searchedproducts.innerHTML = ''
							for (var i=0 ; i<searchresult.result.length ; i++) { 
								searchedproducts.innerHTML += `
								<div class="col-lg-3 mb-4 text-center">
									<div class="product-entry border" onclick="productview(${searchresult.result[i]._id})">
										<a href="/productdetails?id=${searchresult.result[i]._id}" class="prod-img">
											<img src="/productimages/${searchresult.result[i].image[0]}" class="img-fluid" alt="Free html5 bootstrap 4 template">
											<div class="desc">
												<h2><a href="/productdetails?id=${searchresult.result[i]._id}">
													${searchresult.result[i].name}
													</a>
												</h2>
												<span class="price">
													₹${searchresult.result[i].cost}
												</span>
											</div>
										</a>
									</div>
								</div>`
							}
						}
					} catch (Error) {
						console.log(Error);
					}
				})
			</script>
